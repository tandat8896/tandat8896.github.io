---
import Hr from "../Hr.astro";
import Socials from "../Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
  showSocials?: boolean;
  showCopyright?: boolean;
  customContent?: string;
}

const { 
  noMarginTop = false, 
  showSocials = true,
  showCopyright = true,
  customContent
} = Astro.props;
---

<footer class:list={["w-full bg-background border-t border-border", { "mt-auto": !noMarginTop }]}>
  <div class="max-w-full mx-auto px-2">
    <div class="flex flex-col items-start justify-between py-6 sm:flex-row sm:py-4">
      {showSocials && <Socials />}
      
      <div class="my-2 flex flex-col items-start whitespace-nowrap sm:flex-row text-sm text-muted-foreground">
        {customContent ? (
          <div class="text-left" set:html={customContent} />
        ) : (
          showCopyright && (
            <>
              <span>Copyright &#169; {currentYear}</span>
              <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
              <span>All rights reserved.</span>
            </>
          )
        )}
      </div>
    </div>
  </div>
</footer>
